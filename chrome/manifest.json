{
	"manifest_version"	: 2,
	"name"				: "TFS Colorizer",
	"short_name"        :  "TFS Colorizer",
	"description"		: "This allows you to customize the colors of items on a TFS board depending on their content.",
	"version"			: "1.5",
	"author"            :  "Entropa Software Ltd.",
	"homepage_url"      :  "http://www.dogschasingsquirrels.com",
	"icons"				: {
		"16"	: "icon_16.png",
		"19"	: "icon_19.png",
		"32"	: "icon_32.png",
		"48"	: "icon_48.png",
		"128"	: "icon_128.png"
	},
	"permissions"		: [ "tabs", "storage" ],
	"options_page"		: "options.html",
	"content_scripts"	: [ {
		"matches"	: [ "*://*/tfs/*/*board*", "*://*/tfs/*/*Board*", "file:///*.htm" ],
		"css"		: [ "style.css" ],
		"js"		: [ "jquery-2.1.0.min.js", "util.js", "storage.js", "script.js" ]
	} ]
}
